<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:layout_marginTop="40sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/pay"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/login_form_background"
            android:paddingTop="10sp"
            android:paddingBottom="20sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">


            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transaction_data"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/amount_text"
                    android:textColor="@color/text"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/amount"
                    android:textAlignment="textEnd"
                    android:textColor="@color/text"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:layout_marginTop="5sp">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/payment_date"
                    android:textColor="@color/text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_medium"

                    android:textAlignment="textEnd"
                    android:textColor="@color/text"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:layout_marginTop="5sp">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/renovation_date"
                    android:textColor="@color/text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/renew"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="textEnd"
                    android:textColor="@color/text"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            android:layout_height="280sp"
            android:orientation="vertical"
            android:background="@drawable/login_form_background"
            android:paddingTop="20sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/card_data"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/card_number"
                android:textColor="@color/text"
                android:layout_marginTop="14sp"/>

            <EditText
                android:autofillHints="creditCardNumber"
                android:id="@+id/edit_text_card_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/login_text_field_background"
                android:drawableStart="@drawable/ic_credit_card"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:drawablePadding="5sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/editable_text"
                android:hint="@string/credit_card_number_hint"
                android:textSize="14sp"
                android:inputType="number"
                android:maxLength="19"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:orientation="horizontal"
                android:layout_marginTop="5sp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/expiration_date"
                        android:textColor="@color/text"
                        android:textSize="14sp"/>

                    <EditText
                        android:autofillHints="creditCardExpirationDate"
                        android:id="@+id/edit_text_valid_throw"
                        android:layout_width="match_parent"
                        android:layout_height="48sp"
                        android:background="@drawable/login_text_field_background"
                        android:drawableStart="@drawable/ic_calendar"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:drawablePadding="5sp"
                        android:hint="@string/credit_card_expiration_date_hint"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/editable_text"
                        android:inputType="date"
                        android:textSize="14sp"
                        android:maxLength="7"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/text"
                        android:text="@string/cvv_number"
                        android:textSize="14sp"/>

                    <EditText
                        android:autofillHints="creditCardSecurityCode"
                        android:id="@+id/edit_text_code"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:layout_height="48sp"
                        android:background="@drawable/login_text_field_background"
                        android:drawableStart="@drawable/ic_credit_card_back"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:drawablePadding="5sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/editable_text"
                        android:textSize="14sp"
                        android:hint="@string/credit_card_Security_code_hint"
                        android:maxLength="3"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/text"
                android:text="@string/holder"
                android:textSize="14sp"/>

            <EditText
                android:autofillHints="name"
                android:id="@+id/edit_text_name"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:background="@drawable/login_text_field_background"
                android:drawableStart="@drawable/ic_profile"
                android:paddingLeft="5sp"
                android:hint="@string/credit_card_holder_hint"
                android:paddingRight="5sp"
                android:drawablePadding="5sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/editable_text"
                android:textSize="14sp"
                android:maxLength="50"
                android:inputType="textPersonName"/>

        </LinearLayout>

        <Button
            android:id="@+id/pay_button"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:layout_marginTop="40sp"
            android:background="@drawable/btn_rounded_no_border"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/pay_button"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>