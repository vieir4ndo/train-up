<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="50sp"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_horizontal"
            android:text="@string/create_exercise_title"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/return_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_close"
            android:contentDescription="Exit" />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_create"
                    android:layout_width="150sp"
                    android:layout_height="match_parent"
                    android:text="@string/from_0"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/btn_rounded_no_border_black"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:text="@string/create_exercise_description" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:gravity="top"
                android:layout_marginTop="40sp">

                <Button
                    android:id="@+id/button_pattern"
                    android:layout_width="150sp"
                    android:layout_height="60sp"
                    android:text="@string/use_pattern"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/btn_rounded_no_border_black"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:text="@string/pattern_description" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
